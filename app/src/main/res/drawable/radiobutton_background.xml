<!-- res/drawable/radiobutton_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="#FFFFFF"/> <!-- 选中时的白色背景 -->
            <stroke
                android:width="1dp"
                android:color="#000000"/> <!-- 黑色边框 -->
            <corners android:radius="8dp"/> <!-- 圆角 -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#D3D3D3"/> <!-- 默认的灰色背景 -->
            <corners android:radius="8dp"/> <!-- 圆角 -->
        </shape>
    </item>
</selector>
