<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="基本设置">


        <SwitchPreferenceCompat
            android:key="day_night_mode"
            android:title="夜间模式"
            android:summary="是否启用夜间模式"
            android:defaultValue="false"/>

        <ListPreference
            android:key="language"
            android:title="语言"
            android:summary="选择语言"
            android:entries="@array/language"
            android:entryValues="@array/language_value"
            android:defaultValue="zh"/>
    </PreferenceCategory>


    <PreferenceCategory
        android:title="高级设置">

        <Preference
            android:key="about"
            android:title="关于"
            android:summary="关于我们"/>
</PreferenceCategory>

</PreferenceScreen>
